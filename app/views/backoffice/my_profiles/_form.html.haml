- if f.object.picture?
  .control-group
    .controls
      = image_tag f.object.picture, style: "width: 80px"
- else
  = f.input :picture, label: t('backoffice.picture')
= f.input :political_party, label: t('backoffice.political_party')
= f.input :address, label: t('backoffice.address')
= f.input :postal_code, label: t('backoffice.postal_code')
= f.input :birthday, placeholder: t('backoffice.date_hint'), label: t('backoffice.birthday')
= f.input :phone, label: t('backoffice.phone')
= f.input :email, placeholder: "contact@voxe.org"
= render "url", f: f, name: t('backoffice.website'), input: :website, website:"", hint: t('backoffice.website')
= render "url", f: f, name: "", input: :facebook, label: image_tag('web/icons/facebook.png'), website: "facebook", hint: t('backoffice.social_username')
= render "url", f: f, name: "", input: :twitter, label: image_tag('web/icons/twitter.png'), website: "twitter", hint: t('backoffice.social_username')
= render "url", f: f, name: "", input: :youtube, label: image_tag('web/icons/youtube.png'), website: "youtube", hint: t('backoffice.social_username')
= render "url", f: f, name: "", input: :wikipedia, label: image_tag('web/icons/wikipedia.png'), website: "wikipedia", hint: t('backoffice.wikipedia_article')
= render "url", f: f, name: "", input: :cibul, label: "Cibul", website: "cibul", website: 'cibul', hint: "Cibul"
= f.input :biography, as: :text, label: t('backoffice.biography'), input_html: { class: "input-xxlarge", maxlength: 300, rows: 5 }, hint: tag(:span, id: 'biography-counter'), placeholder: '300 ' + t('backoffice.characters_max')

= f.input :introduction, as: :text, label: t('backoffice.introduction'), input_html: { class: "input-xxlarge", maxlength: 1000, rows: 16 }, hint: tag(:span, id: 'introduction-counter'), placeholder: '1000 ' + t('backoffice.characters_max')

:coffee
  $ ->
    $('#candidacy_candidate_profile_biography').simplyCountable({
      counter: '#biography-counter'
      maxCount: 300
      countDirection: 'up'
    })
    $('#candidacy_candidate_profile_introduction').simplyCountable({
      counter: '#introduction-counter'
      maxCount: 1000
      countDirection: 'up'
    })
